#!/bin/bash
# Jamf Health Tool Environment Configuration
# Source this file to set up your Jamf Pro credentials
#
# INSTRUCTIONS:
#   1. Copy this file: cp .env.jamf.example .env.jamf
#   2. Edit .env.jamf with your actual credentials
#   3. Source the file: source .env.jamf
#   4. NEVER commit .env.jamf to version control!
#
# Usage:
#   source ~/.env.jamf
#   OR add to your ~/.zshrc:
#   echo 'source ~/jamf_health_tool/.env.jamf' >> ~/.zshrc

# Replace with your actual Jamf Pro server URL
export JAMF_BASE_URL="https://yourserver.jamfcloud.com"

# Replace with your actual OAuth Client ID
export JAMF_CLIENT_ID="your-client-id-here"

# Replace with your actual OAuth Client Secret
export JAMF_CLIENT_SECRET="your-client-secret-here"

# Optional: Disable SSL verification for on-premise servers (INSECURE - only for testing)
# export JAMF_VERIFY_SSL=false

# Optional: Provide custom SSL certificate
# export JAMF_SSL_CERT_PATH=/path/to/cert.pem

echo "âœ“ Jamf Health Tool environment configured"
echo "  JAMF_BASE_URL: $JAMF_BASE_URL"
echo "  JAMF_CLIENT_ID: ${JAMF_CLIENT_ID:0:10}..."
